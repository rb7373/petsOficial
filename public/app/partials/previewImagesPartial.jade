.panel(ng-controller="previewImagesController")
  a.arrow.prev(href='#', ng-click='showPrev()')
  a.arrow.next(href='#', ng-click='showNext()')
  img.img-responsive.img-rounded.velocity-opposites-transition-flipYIn(ng-repeat='photo in photos', data-velocity-opts="{ stagger: 350 }", ng-swipe-right='showPrev()', ng-swipe-left='showNext()', ng-show='isActive($index)', ng-src='{{photo.src}}')

